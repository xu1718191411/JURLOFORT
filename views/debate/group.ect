<script src="/socket.io/socket.io.js"></script>
<script>
   var socket = io("127.0.0.1:8000/group");

   socket.emit("heihei",{})
   socket.on("haha",function(msg){
    alert("hahahah")
   })

$(document).ready(function() {
	$('#liquid').liquidcarousel({
		height: 150,		//the height of the list
		duration: 100,		//the duration of the animation
		hidearrows: false	//hide arrows if all of the list items are visible
	});
});

//点击参加然后进入辩论页面
function join(n,that){
    socket.emit("join",{num:parseInt($(that).attr("num")),position:n})
            location = "/debate"
    return false;
}

socket.on("joined",function(result){
    console.log("joined result is the following....")
    forbidJointButton(result)
})

function forbidJointButton(obj){
    var _pro = obj.pro
    var _con = obj.con

    var themes = $(".themes")

    for(var i=0;i<themes.length;i++){


        if(parseInt($(themes[i]).attr("num")) == obj.num){
                if(_pro){
                    $(themes[i]).find("a").eq(0).attr("disabled","disabled");
                }

                if(_con){
                    $(themes[i]).find("a").eq(1).attr("disabled","disabled");
                }
        }


    }
}
</script>

</html>