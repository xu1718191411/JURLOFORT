                <div class="row">
                        <div id="liquid" class="liquid">
                            <span class="previous"></span>
                            <div class="wrapper">
                                <ul>

                                    <% for theme in @themes : %>
                                       <li>
                                           <div class="row">
                                               <div class="thumbnail">
                                                   <h4>テーマ:<%=theme.theme%></h4>
                                                   <p class="themes" num="<%=theme.num%>">

                                                    <% if theme?.pro : %>

                                                        <a href="#" disabled onclick="return join(1,this)" class="btn btn-info" num="<%=theme.num%>" role="button">参加</a>
                                                    <% else: %>
                                                        <a href="#"  onclick="return join(1,this)" class="btn btn-info" num="<%=theme.num%>" role="button">参加</a>
                                                    <% end %>

                                                     <% if theme?.con : %>
                                                        <a href="#" disabled  onclick="join(2,this)" num="<%=theme.num%>" class="btn btn-success" role="button">参加</a>
                                                    <% else: %>
                                                        <a href="#" onclick="join(2,this)" num="<%=theme.num%>" class="btn btn-success" role="button">参加</a>
                                                    <% end %>





                                                   </p>
                                               </div>
                                           </div>
                                       </li>
                                    <% end %>

                                </ul>
                            </div>
                            <span class="next"></span>
                        </div>
                </div>

