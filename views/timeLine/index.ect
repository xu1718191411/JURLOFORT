<!doctype html>
<html lang="en" class="no-js">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link href='http://fonts.googleapis.com/css?family=Droid+Serif|Open+Sans:400,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="/timeLine/css/reset.css"> <!-- CSS reset -->
	<link rel="stylesheet" href="/timeLine/css/style.css"> <!-- Resource style -->
	<script src="/timeLine/js/modernizr.js"></script> <!-- Modernizr -->




    <!-- jQuery 1.7.2+ or Zepto.js 1.0+ -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>


    <!-- Magnific Popup core CSS file -->
    <link rel="stylesheet" href="/dimsemenov-Magnific-Popup/dist/magnific-popup.css">



    <!-- Magnific Popup core JS file -->
    <script src="/dimsemenov-Magnific-Popup/dist/jquery.magnific-popup.js"></script>





	<title>Responsive Vertical Timeline</title>

	<style>

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    li {
        float: left;
    }

    li a {
        display: inline-block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    li a:hover {
        background-color: #111;
    }

	</style>
</head>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-74842054-1', 'auto');
  ga('send', 'pageview');

</script>
<body>
    <p>
	<ul>
      <li><a class="active" href="/blog/">主页</a></li>
      <li><a href="/timeLine/add?_id=<%=@content._id%>">添加回忆</a></li>

      <li><a href="/profile?nameTxt=<%= @loginSession.name%>&classNumber=<%= @loginSession.class%>">个人主页</a></li>

      <li><a href="/blog/AllTimeLine">组织信息</a></li>

    </ul>
    </p>

	<header style="height:80px;">


		<h1>大家一起为<%=@content.name%>构筑的的回忆线</h1>
	</header>
	<header style="height:220px;">
		<h3><a href="/timeLine/add?_id=<%= @content._id%>">添加你对他的回忆</a></h3>
	</header>

	<section id="cd-timeline" class="cd-container">
        <% for link in @contentTimeLines : %>
            <div class="cd-timeline-block">
                <div class="cd-timeline-img cd-picture">
                    <img src="/timeLine/img/cd-icon-picture.svg" alt="Movie">
                </div> <!-- cd-timeline-img -->

                <div class="cd-timeline-content">
                    <a href="/timeLine/add?_id=<%= @_id%>&_ids=<%= link.id%>">
                    <% if link?.from : %>


                                <% if link.anonymity=="1" : %>
                                        <p><%= link.from.name%>对他的回忆 点击查看</p>
                                <% else :%>
                                        <p>神秘人对他的回忆 点击查看</p>
                                <% end %>
                    <% else : %>
                                <p>未知来源</p>
                    <% end %>

                    </a>


                    <h2><%= link.content %></h2>
                    <p><%= link.contentDetail %></p>

                    <p>
                    <img class="test-popup-link" href="/timeLineupload/<%= link.targetName%>" src="/timeLineupload/<%= link.targetname%>">
                    </p>
                    <span class="cd-date"><%= link.start%></span>
                </div> <!-- cd-timeline-content -->
            </div> <!-- cd-timeline-block -->
        <% end %>

	</section> <!-- cd-timeline -->
<script src="/timeLine/js/main.js"></script> <!-- Resource jQuery -->
</body>
</html>


<script>

$(document).ready(function($) {

$('.test-popup-link').magnificPopup({
    type: 'image' // this is default type
});

});

</script>