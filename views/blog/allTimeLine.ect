<body>

   <% include 'blog/navy.ect', {classNumber:@classNumber,nameTxt:@nameTxt} %>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Header -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">

               <% switch @classNumber : %>
                 <% when '1' : %>
                    高三十七班
                 <% end %>
                 <% when '2' : %>
                    兄弟连
                 <% end %>
                 <% when '3' : %>
                    初三八班
                 <% end %>
                 <% else : %>
                    系统错误
                  <% end %>
               <% end %>

                    <small>的回忆录</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->


        <div class="row" class="col-lg-12">
          <% for link in @content : %>
          <div  class="col-lg-6">
            <div class="col-lg-4 portfolio-item">




                <% if link?._profile: %>

                     <% if link?._profile.targetName: %>
                         <a href="#">
                              <img class="img-responsive img-circle test-popup-link" href="/profileUpload/<%= link._profile.targetName%>"  width="150" height="150" src="/profileUpload/<%= link._profile.targetName%>" alt="">
                          </a>

                      <% else:%>

                       <a href="#">
                        <img class="img-responsive img-circle" width="150" height="150" src="/images/headCapture/2.jpg" alt="">
                       </a>

                      <% end %>
                <% else:%>

                  <a href="#">
                      <img class="img-responsive img-circle" width="150" height="150" src="/images/headCapture/2.jpg" alt="">
                  </a>
                <% end %>

            </div>
            <div class="col-lg-8 portfolio-item">
                <h3>
                    <a href="/timeLine?_id=<%= link.__id %>">
                        <%= link.name %>
                    </a>
                </h3>
                <p>
                    <%= link.profile%>
                </p>
                <email><%= link._profile.mail%></email>
            </div>
            </div>


        <% end %>

        </div>



        <!-- Projects Row -->

        <!-- /.row -->


        <!-- Pagination -->
        <!--<div class="row text-center">
