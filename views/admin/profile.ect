<!-- profile -->
<div id="profile" class="tab-pane">
    <section class="panel">
        <div class="bio-graph-heading">

                <% if @content?.profile : %>
                     <%= @content.profile.profile%>
                <% else : %>
                    他还没有填写个人简介
                <% end %>

        </div>
        <div class="panel-body bio-graph-info">
            <h1><%= @content.name%></h1>
            <div class="row">
                <div class="bio-row">
                    <p><span>姓名</span>: <%= @content.name %></p>
                </div>

             <% if @content?.profile : %>
                <div class="bio-row">
                    <p><span>昵称 </span>: <%= @content.profile.nickname%></p>
                </div>
                <div class="bio-row">
                    <p><span>生日</span>: <%=@content.profile.birthday%></p>
                </div>
                <div class="bio-row">
                    <p><span>哪儿人</span>: <%=@content.profile.location%></p>
                </div>
                <div class="bio-row">
                    <p><span>干什么的 </span>: <%=@content.profile.occupation%></p>
                </div>
                <div class="bio-row">
                    <p><span>邮箱</span>: <%=@content.profile.mail%></p>
                </div>
                <div class="bio-row">
                    <p><span>微信</span>: <%=@content.profile.wechat%></p>
                </div>
                <div class="bio-row">
                    <p><span>微博</span>:  <%=@content.profile.weibo%></p>
                </div>
             <% else : %>
                 未知领域，待开发
             <% end %>


            </div>
        </div>
    </section>
    <section>
        <div class="row">
        </div>
    </section>
</div>
<!-- edit-profile -->
<div id="edit-profile" class="tab-pane">
    <section class="panel">
        <div class="panel-body bio-graph-info">
            <h1> Profile Info</h1>
            <form class="form-horizontal" role="form" method="post" action="updateClassMate">
                <div class="form-group">
                    <label class="col-lg-2 control-label">姓名</label>
                    <div class="col-lg-6">
                        <input type="text" name="name" class="form-control" id="f-name" placeholder="" value="<%=@content.name%>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">昵称</label>
                    <div class="col-lg-6">

                    <% if @content?.profile : %>
                        <input type="text" name="nickname" value="<%=@content.profile.nickname%>" class="form-control" id="l-name" placeholder=" ">
                    <% else : %>
                        <input type="text" name="nickname" class="form-control" id="l-name" placeholder=" ">
                    <% end %>



                    </div>
                </div>

                  <div class="form-group">
                        <label class="col-lg-2 control-label">生日</label>
                        <div class="col-lg-6">

                             <% if @content?.profile : %>
                                 <input type="text" name="birthday" value="<%=@content.profile.birthday%>"  class="form-control" id="l-name" placeholder=" ">
                             <% else: %>
                                 <input type="text" name="birthday" class="form-control" id="l-name" placeholder=" ">
                             <% end %>

                        </div>
                    </div>

                  <div class="form-group">
                        <label class="col-lg-2 control-label">哪儿人</label>
                        <div class="col-lg-6">

                             <% if @content?.profile : %>
                                  <input type="text" name="location" value="<%=@content.profile.location%>" class="form-control" id="l-name" placeholder=" ">
                             <% else: %>
                                  <input type="text" name="location" class="form-control" id="l-name" placeholder=" ">
                             <% end %>


                        </div>
                    </div>


                  <div class="form-group">
                        <label class="col-lg-2 control-label">干什么的</label>
                        <div class="col-lg-6">
                         <% if @content?.profile : %>
                          <input type="text" name="occupation" value="<%=@content.profile.occupation%>"  class="form-control" id="l-name" placeholder=" ">
                         <% else: %>
                         <input type="text" name="occupation" class="form-control" id="l-name" placeholder=" ">
                         <% end %>

                        </div>
                    </div>


                  <div class="form-group">
                        <label class="col-lg-2 control-label">邮箱</label>
                        <div class="col-lg-6">

                             <% if @content?.profile : %>
                                  <input type="text" name="mail" value="<%=@content.profile.mail%>"  class="form-control" id="l-name" placeholder=" ">
                             <% else: %>
                                 <input type="text" name="mail" class="form-control" id="l-name" placeholder=" ">
                             <% end %>

                        </div>
                    </div>


                  <div class="form-group">
                        <label class="col-lg-2 control-label">微信</label>
                        <div class="col-lg-6">

                             <% if @content?.profile : %>
                              <input type="text" name="wechat" value="<%=@content.profile.wechat%>"  class="form-control" id="l-name" placeholder=" ">
                             <% else: %>
                             <input type="text" name="wechat" class="form-control" id="l-name" placeholder=" ">
                             <% end %>

                        </div>
                    </div>

                 <div class="form-group">
                       <label class="col-lg-2 control-label">微博</label>
                       <div class="col-lg-6">

                            <% if @content?.profile : %>
                             <input type="text" name="weibo" value="<%=@content.profile.weibo%>"  class="form-control" id="l-name" placeholder=" ">
                            <% else: %>
                           <input type="text" name="weibo" class="form-control" id="l-name" placeholder=" ">
                            <% end %>

                       </div>
                   </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">个人简介</label>


                    <div class="col-lg-10">

                             <% if @content?.profile : %>
                                <textarea name="profile" id="" class="form-control" cols="30" rows="5">
                                        <%=@content.profile.profile %>
                                </textarea>
                             <% else: %>
                                <textarea name="profile" id="" class="form-control" cols="30" rows="5"></textarea>
                             <% end %>

                    </div>
                </div>


                 <div class="form-group">
                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-10">
                            <input type="hidden" name="_id" value="<%= @content._id%>">
                            <input type="hidden" name="class" value="<%= @content.class%>">
                           <input type="submit" value="更新" class="form-control">
                        </div>
                 </div>

            </form>
        </div>
    </section>
</div>
</div>
